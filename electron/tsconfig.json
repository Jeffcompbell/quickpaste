{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist-electron",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["../node_modules/@types"],
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["../node_modules", "../dist", "../dist-electron"]
}
